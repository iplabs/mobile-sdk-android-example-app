# EditorConfig file
# cf. http://EditorConfig.org

# Mark as top-most EditorConfig file
root = true

# Global settings
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

# JSON-specific adjustments
[*.json]
indent_style = space
indent_size = 2

# Markdown-specific adjustments
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
